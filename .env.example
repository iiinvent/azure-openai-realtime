# Azure Speech Services Configuration
# Find these in Azure Portal -> Speech Services -> Keys and Endpoint
SPEECH_KEY=your_speech_key_here
SPEECH_REGION=your_speech_region_here  # e.g., eastus2

# Azure OpenAI Configuration
# Find these in Azure Portal -> Azure OpenAI -> Keys and Endpoint
AZURE_OPENAI_KEY=your_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/openai/realtime

# Azure OpenAI Model Configuration
# This should match your model deployment name in Azure OpenAI Studio
AZURE_OPENAI_DEPLOYMENT=gpt-4o-realtime-preview  # or your_model_deployment_name
